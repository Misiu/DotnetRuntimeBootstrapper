<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">

  <Target Name="CreateBootstrapper" AfterTargets="Build" Condition="'$(OutputType)' == 'WinExe'">
    <!-- TODO: properly resolve runtime name/version -->
    <CreateBootstrapperTask
      TargetApplicationName="$(AssemblyName)"
      TargetExecutableFilePath="$(OutDir)/$(AssemblyName).dll"
      TargetRuntimeName="Microsoft.WindowsDesktop.App"
      TargetRuntimeVersion="3.1.15"
      ApplicationIconFilePath="$(ApplicationIcon)"
    />
  </Target>

</Project>